//   name     result    chord keys
// Left hand column letters
COMB(COMBO_B,   KC_B,    MEH_T(KC_SPACE), KC_P)
COMB(COMBO_G,   KC_G,    MEH_T(KC_SPACE),MT(MOD_LGUI, KC_T))
COMB(COMBO_V,   KC_V,    MEH_T(KC_SPACE), KC_D)
// Right hand column letters
COMB(COMBO_J,   KC_J,    KC_BSPACE, KC_L)
COMB(COMBO_M,   KC_M,    KC_BSPACE, MT(MOD_RGUI, KC_N))
COMB(COMBO_K,   KC_K,    KC_BSPACE, KC_H)





// LAYER 0 Combos
// To 0
COMB(TO_0, TO(0), MEH_T(KC_SPACE),KC_BSPACE)
// ENTER
COMB(COMBO_ENTER, KC_ENTER, MT(MOD_RGUI, KC_N),MT(MOD_RALT, KC_E),MT(MOD_RCTL, KC_I))
// CMD Backspace
COMB(DELETE_LINE, RGUI(KC_BSPACE), KC_H, KC_COMMA, KC_DOT)
// TAB
COMB(COMBO_TAB, KC_TAB, MT(MOD_LCTL, KC_R),MT(MOD_LALT, KC_S),MT(MOD_LGUI, KC_T))
// Shift TAB
COMB(SFT_TAB, LSFT(KC_TAB), KC_X, KC_C, KC_D)
// UNDO
COMB(UNDO, LGUI(KC_Z), KC_X, KC_C)
// REDO
COMB(REDO, LGUI(LSFT(KC_Z)), KC_DOT, KC_COMMA)
// To 2
COMB(TO_2_0, TO(2), KC_L, MT(MOD_RGUI, KC_N))
// to 3
COMB(TO_3_0, TO(3), MT(MOD_RALT, KC_E), KC_U)
// Thank you!
SUBS(THANK_YOU, "Thank you!", KC_U, KC_Y)
// Mouse click
COMB(L_MOUSE, KC_BTN1, KC_L, KC_U )

// Layer 1 Combos
// To 0
COMB(TO_0_FROM_1, TO(0), KC_ESC,KC_BSPACE)

// Select all

// Layer 2 Combos
// To 0
COMB(TO_0_FROM_2, TO(0), KC_1, KC_4)
// ENTER
COMB(COMBO_ENTER_LAYER_2, KC_ENTER, KC_4,   KC_5,   KC_6)
// SCREENSHOT
COMB(SCREENSHOT, RCTL(RCMD(RSFT(KC_4))), KC_1,   KC_2,   KC_3)

// Layer 3 Combos
// To 0
COMB(TO_0_FROM_3, TO(0), KC_UP, KC_DOWN)
// ENTER
COMB(COMBO_ENTER_LAYER_1, KC_ENTER,KC_LEFT,      KC_DOWN,  KC_RIGHT)
// Alt shift Left
COMB(ALT_SFT_L, RALT(RSFT(KC_LEFT)), KC_LEFT, KC_DOWN)
// Alt shift right
COMB(ALT_R, RALT(RSFT(KC_RIGHT)), KC_DOWN, KC_RIGHT)
// Page up
COMB(PG_UP, KC_PGUP, RGUI(KC_V), KC_UP)
// Page DOWN
COMB(PG_DOWN, KC_PGDOWN,  RGUI(KC_C), KC_UP)
// Cut
COMB(CUT, RGUI(KC_X), RGUI(KC_C), RGUI(KC_V))